<body>
    <div class="container mt-4">
        <h1>Detalhes do Evento</h1>
        
        <p><strong>Título:</strong> {{event.title}}</p>
        <p><strong>Descrição:</strong> {{event.description}}</p>
        <p><strong>Data:</strong> {{event.date}}</p>
        <p><strong>Local:</strong> {{event.location}}</p>
        <p><strong>Privado:</strong> {{#if event.isPrivate}}Sim{{else}}Não{{/if}}</p>
        <p><strong>Criado por:</strong> {{event.creator.name}}</p>

        <!-- Formulário de edição -->
        <form action="/events/{{event.id}}/edit" method="POST">
            <div class="mb-3">
                <label for="title" class="form-label">Título</label>
                <input type="text" class="form-control" id="title" name="title" value="{{event.title}}" required>
            </div>
            <div class="mb-3">
                <label for="description" class="form-label">Descrição</label>
                <textarea class="form-control" id="description" name="description">{{event.description}}</textarea>
            </div>
            <div class="mb-3">
                <label for="date" class="form-label">Data</label>
                <input type="date" class="form-control" id="date" name="date" value="{{event.date}}">
            </div>
            <div class="mb-3">
                <label for="location" class="form-label">Local</label>
                <input type="text" class="form-control" id="location" name="location" value="{{event.location}}">
            </div>
            <div class="form-check mb-3">
                <input class="form-check-input" type="checkbox" id="isPrivate" name="isPrivate" {{#if event.isPrivate}}checked{{/if}}>
                <label class="form-check-label" for="isPrivate">Privado</label>
            </div>
            <button type="submit" class="btn btn-primary">Salvar Alterações</button>
        </form>

        <!-- Formulário de deleção -->
        <form action="/events/{{event.id}}/delete" method="POST" class="mt-3">
            <button type="submit" class="btn btn-danger">Deletar Evento</button>
        </form>

        <!-- Botão para voltar -->
        <a href="/events" class="btn btn-secondary mt-3">Voltar para a Lista</a>
    </div>
</body>
